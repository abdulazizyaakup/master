<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="external_layout_standard_v4_drymix">
        <div t-attf-class="header o_company_#{company.id}_layout first-page" t-att-style="report_header_style">
            <div class="row">
                <div class="col-4">
                    <t t-foreach="docs" t-as="doc">
                        <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="max-height: 100px;width:100%;" alt="Logo"/>
                        <p style="padding-top:10px;">Our Ref: <b style="padding-top:10px;padding-left:15px;"><t t-esc="doc.fl_name"/></b></p>
                        <br/>
                    </t>
                </div>
                <div class="col-8 text-right"></div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div class="footer" style="font-size:12px; bottom:20px;">
            <b>STARKEN DRYMIX SOLUTION SDN. BHD.</b> <small>201001032580 (916505-X)</small><br/>
            <i>(Formerly known as Green Drymix Solutions Sdn. Bhd.)</i><br/>
            <br/>
            <b>Head Office:</b><br/>
            <p>
                A-1-3A, Pusat Perdagangan Kuchai, No. 2, Jalan 1/127, Off Jalan Kuchai Lama, 58200 Kuala Lumpur, Malaysia.<br/>
                Tel: 03 7982 8066 Fax: 03 7983 8066 Web: www.starkendrymix.com.my Email: info-drymix@starken.com.my<br/>
            </p>
            <b>Factory:</b><br/>
            <p>
                Lot 12448-12473, Kawasan Perindustrian Bidor, Mukim Bidor, Daerah Batang Padang, 35500 Perak, Malaysia.<br/>
            </p>
        </div>
    </template>

    <template id="external_layout_v4_drymix">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}"><t t-raw="0"/></t>
        <t t-else="else" t-call="drymix-crm.external_layout_standard_v4_drymix"><t t-raw="0"/></t>

    </template>

    <template id="report_quotation_sale_order"> 
        <t t-call="drymix-crm.external_layout_v4_drymix">

            <t t-call="web.html_container">

                <t t-foreach="docs" t-as="doc">

                    <style>
                        .watermark_logo{
                            position: absolute;
                            padding-top: 360px;
                            padding-bottom: 200px;
                            padding-left: 90px;
                            padding-right: 90px;
                            z-index: 1000;
                            font-size: 170px;
                            opacity: 0.001;
                            -webkit-transform: rotate(-20deg);
                            -moz-transform: rotate(-20deg);
                            -o-transform: rotate(-20deg);
                            -ms-transform: rotate(-20deg);
                            transform: rotate(-20deg);

                        }

                    </style>

                    <div class="watermark_logo" style="">
                        <t t-if="doc.state == 'draft'">
                            <span style="opacity:0.25;transform:rotate(20deg);">DRAFT</span>
                        </t>
                    </div>

                    <table style="width:100%; border: none;">
                        <tr>
                            <td>Date: </td>
                            <td style="padding-left: 15px;"><t t-esc="doc.date_order" t-options='{"widget": "date"}'/></td>
                        </tr>
                        <tr>
                            <td>Date: </td>
                            <td style="padding-left: 15px;"><t t-esc="doc.date_order" t-options='{"widget": "date"}'/></td>
                        </tr>
                        <tr>
                            <td>To: </td>
                            <td style="padding-left: 15px;"><t t-esc="doc.partner_id.name"/></td>
                        </tr>
                        <tr>
                            <td>Address: </td>
                            <td style="padding-left: 15px;">
                                <t t-esc="doc.quot_street_drymix"/><br/>
                                <t t-esc="doc.quot_street2_drymix"/><br/>
                                <t t-esc="doc.quot_state_id_drymix.name"/>, <t t-esc="doc.quot_zip_drymix"/>, <t t-esc="doc.quot_country_id_drymix.name"/><br/>
                            </td>
                        </tr>
                        <tr>
                            <td>Tel: </td>
                            <td style="padding-left: 15px;"><t t-esc="doc.partner_id.phone"/></td>
                            <td>Mobile: </td>
                            <td style="padding-left: 15px;"><t t-esc="doc.attn_mobile"/></td>
                        </tr>
                        <tr>
                            <td>Fax: </td>
                            <td style="padding-left: 15px;"><t t-esc="doc.partner_id.fax"/></td>
                            <td>Email: </td>
                            <td style="padding-left: 15px;"><t t-esc="doc.attn_email"/></td>
                        </tr>
                    </table>

                    <br/>

                    <p>Attention to: <b><t t-esc="doc.attn_to"/></b></p>

                    <p>Dear Sir / Madam,</p>

                    <br/>

                    <p>
                        <b><u style="word-spacing:1px"><t t-esc="doc.quot_title_drymix"/></u></b>
                    </p>

                    <p>With reference to the above-mentioned, we are pleased to append herewith our offer for your kind consideration:</p>
                    
                    <table style="width:80%;">
                        <thead>
                            <tr>
                                <th style="text-align:left;"><u>ITEM</u></th>
                                <th style="text-align:left;"><u>PRODUCT NAME</u></th> 
                                <th style="text-align:left;"><u>PRICE (RM)</u></th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="counter" t-value="1"/>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td style="padding-top: 5px;padding-bottom: 5px;"><span t-esc="counter"/></td>
                                        <td style="padding-top: 5px;padding-bottom: 5px;"><span t-field="line.name"/></td>
                                        <td style="padding-top: 5px;padding-bottom: 5px;"><span t-field="line.price_unit"/></td>
                                        <t t-set="counter" t-value="counter + 1"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td></td>
                                        <td name="" colspan="99" style="padding-top: 5px;padding-bottom: 5px;">
                                            <b><u><span t-field="line.name"/></u></b>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td style="padding-top: 5px;padding-bottom: 5px;"></td>
                                        <td name="td_note_line" colspan="99">
                                            <b><u><span t-field="line.name"/></u></b>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <br/>

                    <p><b>Remarks:</b><br/>
                        <t t-raw="doc.quot_drymix_notes"/>
                    </p>
                    <br/>
                    <div>
                        <p>
                            <t t-esc="doc.quot_remarks_drymix"/>
                        </p><br/>
                        <p>
                            Thank You.
                        </p><br/>

                        Yours faithfully,<br/>
                        <b><t t-esc="doc.company_id.name"/></b><br/><br/>
                        <!-- <i style="font-size:16px;"><t t-esc="doc.user_id.name"/></i><br/> -->
                        <!-- <img t-if="doc.user_id.partner_id.signature" t-att-src="image_data_uri(doc.user_id.partner_id.signature)" style="max-height:150px;width:150px;"/><br/> -->
                        <!-- <img t-if="doc.user_id.partner_id.signature" style="max-height:150px;width:150px;"/><br/> -->
                        <img t-if="doc.user_id.digital_signature" t-attf-src="data:image/*;base64,{{doc.user_id.digital_signature}}" height="90" width="150"/><br/>
                        <b>............................................................</b><br/>
                        <b><t t-esc="doc.user_id.name"/></b><br/>
                        <b><t t-esc="doc.user_id.partner_id.function"/></b>
                    </div>

                </t>

            </t>

        </t>
    </template>

</odoo>
