<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <record id="ov_account_payment_inherit_view" model="ir.ui.view">
        <field name="name">ov.account.payment.custom</field>
        <field name="model">account.payment</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]/field[@name='payment_date']" position="after">
                <field name="cheque_no"/>
            </xpath>
        </field>
    </record>

    <record id="ov_account_payment_invoice_inherit_view" model="ir.ui.view">
        <field name="name">ov.account.payment.invoice.custom</field>
        <field name="model">account.payment</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]/field[@name='payment_date']" position="after">
                <field name="cheque_no"/>
            </xpath>
        </field>
    </record>

</odoo>