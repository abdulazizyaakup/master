<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <record id="ov_product_inherit_view" model="ir.ui.view">
        <field name="name">ov.product.custom</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <h3>
                    <label for="product_no"/>
                    <field name="product_no"/>
                </h3>
            </field>
            <field name="lst_price" position="before">
                <field name="minimum_price" widget="monetary"/>
                <field name="maximum_price" widget="monetary"/>
            </field>
        </field>
    </record>

    <record id="ov_product_template_inherit_view" model="ir.ui.view">
        <field name="name">ov.product.template.custom</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <h3>
                    <label for="product_no"/>
                    <field name="product_no"/>
                </h3>
            </field>
            <field name="list_price" position="before">
                <field name="minimum_price" widget="monetary"/>
                <field name="maximum_price" widget="monetary"/>
            </field>
        </field>
    </record>

</odoo>