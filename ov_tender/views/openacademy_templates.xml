<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="openacademy_courses" name="Course">
        <t t-call="website.layout">
            <div class="container">
                <div class="row">
                    <t t-foreach="courses" t-as="course">
                        <div class="col-md-3">
                            <div class="panel panel-primary course_panel">
                                <div class="panel-heading text-center"><b  t-field="course.name"></b></div>
                                <div class="panel-body">
                                    <div>
                                        <img class="img img-responsive shadow course_image" t-att-src="'/website/image?model=openacademy.course&amp;field=logo&amp;id='+str(course.id)" width="250" height="250"></img>
                                    </div>
                                </div>
                                <div class="panel-footer text-center">
                                    <p class="text-center" style="margin-bottom:0px;"><strong>Responsible </strong> </p>
                                    <p><span class="text-center" t-field="course.responsible_id.name"></span></p>
                                    <a class="btn btn-primary" t-attf-href="/openacademy/course/#{course.id}">See in detail</a>
                                 </div>
                            </div>
                       </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="openacademy_courses_detail" name="Course">
        <t t-call="website.layout">
            <div class="container">
                <div class="row mt32 mb32">
                    <div class="col-md-5">
                        <img class="img img-responsive shadow mt16" t-att-src="'/website/image?model=openacademy.course&amp;field=logo&amp;id='+str(course.id)"  width="400" height="250"></img>
                    </div>
                    <div class="col-md-6">
                        <h1 t-field="course.name"></h1>
                        <h3 ><i class="fa fa-user"></i> Responsible : <span t-field="course.responsible_id.name"></span></h3>
                        <h6 class="text-muted text-justify" t-field="course.description"></h6>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h1>
                            Sessions Information Regarding
                            <span t-field="course.name"></span>
                        </h1>
                    </div>
                    <div class="col-md-4 text-center">
                        <h3>Confirmed Sessions</h3>
                        <div>
                            <t t-foreach="course.session_ids" t-as="session">
                                <div t-if="session.state=='confirmed'">
                                    <span class="label label-info" style="margin:2px;">
                                        <i class="fa fa-file-o"></i>
                                        <t t-esc="session.name"></t>
                                    </span>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <h3>Upcoming Sessions</h3>
                        <div>
                            <t t-foreach="course.session_ids" t-as="session">
                                <div t-if="session.state=='draft'">
                                    <span class="label label-warning" style="margin:2px; ">
                                        <i class="fa fa-clock-o"></i>
                                        <t t-esc="session.name"></t>
                                    </span>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <h3>Completed Sessions</h3>
                        <div>
                            <t t-foreach="course.session_ids" t-as="session">
                                <div t-if="session.state=='done'">
                                    <span class="label label-success" style="margin:2px;">
                                        <i class="fa fa-check"></i>
                                        <t t-esc="session.name"></t>
                                    </span>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
