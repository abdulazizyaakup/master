<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="ov_tender.tender_view_list">
      <field name="name">tender list</field>
      <field name="model">ov.tender</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Title"/>
          <field name="quotation_number"/>
          <field name="start_date" />
          <field name="end_date" />
          <field name="category" />
          <field name="url" widget="url" invisible="1"/>
          <field name="description" invisible="1"/>
          <field name="is_included" invisible="0"/>
          <field name="status" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="ov_tender.tender_view_form">
      <field name="name">tender form</field>
      <field name="model">ov.tender</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <group>
                  <group>
                      <button string="Test Date" name="check_date_period" type="object"/>
                      <field name="name" string="Title"/>
                      <field name="quotation_number"/>
                      <field name="awarding_agency"/>
                      <field name="description" />
                  </group>
                  <group>
                      <field name="start_date" />
                      <field name="end_date" />
                      <field name="category" />
                      <field name="url" widget="url"/>
                      <field name="status"/>
                      <field name="is_included" invisible="0"/>
                      <field name="p_date" invisible="1"/>
                      <field name="f_date" invisible="1"/>
                      <!-- <button string="Click" name="get_scrap_value" type="object"/>
                      <button string="Click2" name="change_date" type="object"/> -->
                  </group>
              </group>
              <label for="partner_ids"/>
              <field name="partner_ids"/>
          </sheet>
         </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="ov_tender.action_tender">
      <field name="name">Tender</field>
      <field name="res_model">ov.tender</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'group_by':'category'}</field>
    </record>

    <!-- actions -->
    <menuitem name="Tender" id="ov_tender.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Tender" id="ov_tender.menu_tender_top" parent="ov_tender.menu_root" sequence="1"/>

    <menuitem name="Tenders" id="ov_tender.menu_tender" parent="ov_tender.menu_tender_top"
              action="ov_tender.action_tender"/>

</odoo>
