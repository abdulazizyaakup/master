      </field>
  </record>

  <record id="product_quotation_group_action" model="ir.actions.act_window">
      <field name="name">Product Group</field>
      <field name="res_model">product.quotation.group</field>
      <field name="view_id" ref="product_quotation_group_tree"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Set product quotation group
        </p>
      </field>
