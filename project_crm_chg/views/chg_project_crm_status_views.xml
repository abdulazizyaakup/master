  <record id="crm_project_status_tree" model="ir.ui.view">
      <field name="name">project.crm.status.tree</field>
      <field name="model">project.crm.status</field>
      <field name="arch" type="xml">
          <tree string="Projects" editable="bottom">
            <field name="status_code"/>
            <field name="name"/>
            <field name="color"/>
          </tree>
      </field>
  </record>

