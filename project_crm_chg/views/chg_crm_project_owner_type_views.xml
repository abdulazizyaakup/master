<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="crm_project_owner_type_tree" model="ir.ui.view">
      <field name="name">project.owner.type.tree</field>
      <field name="model">project.owner.type</field>
      <field name="arch" type="xml">
          <tree string="Projects Owner Type" editable="bottom">
              <field name="name"/>
          </tree>
      </field>
  </record>

  <record id="crm_project_owner_type_form" model="ir.ui.view">
      <field name="name">project.owner.type.form</field>
      <field name="model">project.owner.type</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
          <form string="Project Owner Type">
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                      </group>
                  </group>
              </sheet>
              <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
              </div>
          </form>
      </field>
  </record>

  <record id="crm_project_owner_type_action" model="ir.actions.act_window">
      <field name="name">Project Owner Type</field>
      <field name="res_model">project.owner.type</field>
      <field name="view_id" ref="crm_project_owner_type_tree"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Set a new owner type for project
        </p>
      </field>
  </record>

  <menuitem
      id="crm_menu_project_owner_type"
      name="Project Owner Type"
      parent="crm_menu_project"
      action="crm_project_owner_type_action"
      sequence="2" groups="sales_team.group_sale_manager"/>

</odoo>
