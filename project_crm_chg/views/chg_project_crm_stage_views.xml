<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="crm_project_stage_tree" model="ir.ui.view">
      <field name="name">project.crm.stage.tree</field>
      <field name="model">project.crm.stage</field>
      <field name="arch" type="xml">
          <tree string="Projects" editable="bottom">
              <field name="sequence" widget="handle"/>
              <field name="stage_code"/>
              <field name="name"/>
              <field name="fold"/>
          </tree>
      </field>
  </record>

  <record id="crm_project_stage_form" model="ir.ui.view">
      <field name="name">project.crm.stage.form</field>
      <field name="model">project.crm.stage</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
          <form string="Project Status">
              <sheet>
                  <group>
                      <group>
                          <field name="sequence"/>
                          <field name="stage_code"/>
                          <field name="name"/>
                          <field name="fold"/>
                      </group>
                  </group>
              </sheet>
              <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
              </div>
          </form>
      </field>
  </record>

  <record id="crm_project_stage_action" model="ir.actions.act_window">
      <field name="name">Project Stage</field>
      <field name="res_model">project.crm.stage</field>
      <field name="view_id" ref="crm_project_stage_tree"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Set a new project stage
        </p>
      </field>
  </record>

  <menuitem
      id="crm_menu_project_stage"
      name="Project Stage"
      parent="crm_menu_project"
      action="crm_project_stage_action"
      sequence="2" groups="sales_team.group_sale_manager"/>

</odoo>
