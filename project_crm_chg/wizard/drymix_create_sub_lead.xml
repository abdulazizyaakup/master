<?xml version="1.0"?>
<odoo>
        <record id="project_crm_lead2sublead_view1_form" model="ir.ui.view">
            <field name="name">crm.lead2sublead.businessunit1.form</field>
            <field name="model">crm.lead2sublead.businessunit1</field>
            <field name="arch" type="xml">
                <form string="Generate Lead">
                    <group class="oe_title">
                        <field name="name"/>
                    </group>
                    <group>
                        <group>
                            <!-- <field name="bu_id"/> -->
                            <field name="company_id"/>
                            <field name="owner_marketing"/>
                            <field name="owner_sales"/>
                        </group>
                        <group>
                            <field name="sub_project_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="createsublead_salesman" string="Create and Assign" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="project_crm_lead2sublead1_action" model="ir.actions.act_window">
            <field name="name">Generate Lead</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.lead2sublead.businessunit1</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="project_crm_lead2sublead_view1_form"/>
            <field name="target">new</field>
        </record>
</odoo>
