<?xml version="1.0"?>
<odoo>
        <record id="action_reject_project_view_form" model="ir.ui.view">
            <field name="name">action.reject.request.form</field>
            <field name="model">action.reject.request</field>
            <field name="arch" type="xml">
                <form string="Reject Reason">
                    <group class="oe_title">
                        <field name="reject_reason"/>
                    </group>
                    <footer>
                        <button name="action_reject" string="Reject" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="reject_project_with_reason_action" model="ir.actions.act_window">
            <field name="name">Generate Lead</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">action.reject.request</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="action_reject_project_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
