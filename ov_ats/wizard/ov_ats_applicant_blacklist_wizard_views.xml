<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="applicant_blacklist_wizard_form_view">
        <field name="name">applicant.blacklist.form</field>
        <field name="model">applicant.blacklist</field>
        <field name="arch" type="xml">
            <form string="Blacklist">
                <group>
                    <group>
                        <field name="applicant_ids" readonly="1"/>
                    </group>
                    <group>
                        <field name="blacklist_date"/>
                    </group>
                </group>
                <group>
                    <field name="blacklist_reason"/>
                </group>
                <footer>
                    <button name="blacklist_record" type="object"
                            string="Proceed" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="launch_applicant_blacklist_wizard"
                name="Blacklist"
                src_model="hr.applicant"
                res_model="applicant.blacklist"
                view_mode="form"
                target="new"
                key2="client_action_multi"/>
</odoo>
