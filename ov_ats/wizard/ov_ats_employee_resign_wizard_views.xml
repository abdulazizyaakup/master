<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="employee_resign_wizard_form_view">
        <field name="name">employee.resign.form</field>
        <field name="model">employee.resign</field>
        <field name="arch" type="xml">
            <form string="Resign">
                <group>
                    <group>
                        <field name="employee_ids" readonly="1"/>
                        <field name="applicant_ids" readonly="1"/>
                    </group>
                    <group>
                        <field name="joined_date"/>
                        <field name="resignation_date"/>
                        <field name="resignation_reason"/>
                    </group>
                </group>
                    <group>
                        <field name="track_employee"/>
                        <!-- <field name="delete_ats"/> -->
                    </group>
                <footer>
                    <button name="unlink_record" type="object"
                            string="Proceed" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="launch_employee_resign_wizard"
                name="Resign"
                src_model="hr.employee"
                res_model="employee.resign"
                view_mode="form"
                target="new"
                key2="client_action_multi"/>
</odoo>
