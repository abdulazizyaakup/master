        <record model="ir.ui.view" id="contact_current_last_company_form_view">
            <field name="name">current.last.company.form</field>
            <field name="model">current.last.company</field>
            <field name="arch" type="xml">
                <form string="Current / Last Company">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="applicant_ids">
                                <tree>
                                  <field name="name"/>
                                  <field name="call_application_name" />
                                  <field name="call_individual_pwm_grade"/>
                                  <field name="call_nationality" />
                                  <field name="call_gender" />
                                  <field name="call_races" />
                                  <field name="call_age" />
                                </tree>
                              </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="contact_current_last_company_tree_view">
            <field name="name">current.last.company.tree</field>
            <field name="model">current.last.company</field>
            <field name="arch" type="xml">
                <tree string="Current / Last Company">
                    <field name="name"/>
                    <field name="applicant_ids"/>
                </tree>
            </field>
        </record>

        <record id="action_contact_current_last_company" model="ir.actions.act_window">
            <field name="name">Current / Last Company</field>
            <field name="res_model">current.last.company</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="ov_hr_recruitment_contact_current_last_company" name="Current / Last Company"
            parent="hr_recruitment.menu_hr_recruitment_configuration" action="action_contact_current_last_company" groups="hr_recruitment.group_hr_recruitment_user"/>

</odoo>