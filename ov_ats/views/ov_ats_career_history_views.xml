<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <record model="ir.ui.view" id="contact_career_history_form_view">
            <field name="name">career.history.form</field>
            <field name="model">career.history</field>
            <field name="arch" type="xml">
                <form string="Career History">
                    <sheet>
                        <group>
                            <group>
                                <field name="applicant_id"/>
                                <field name="name"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group>
                                <field name="gross_sal"/>
                                <field name="reason_leave"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="contact_career_history_tree_view">
            <field name="name">career.history.tree</field>
            <field name="model">career.history</field>
            <field name="arch" type="xml">
                <tree string="Career History">
                    <field name="applicant_id"/>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="gross_sal"/>
                </tree>
            </field>
        </record>

        <record id="action_contact_career_history" model="ir.actions.act_window">
            <field name="name">Career History</field>
            <field name="res_model">career.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

