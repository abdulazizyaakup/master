<?xml version="1.0" encoding="utf-8"?>
<odoo> 

    <menuitem id="ov_hr_recruitment_sub_stage" name="Sub Stages"
            parent="hr_recruitment.menu_hr_recruitment_configuration" groups="hr_recruitment.group_hr_recruitment_user"/>

        <record model="ir.ui.view" id="contact_stage_form_view">
            <field name="name">contact.substage.form</field>
            <field name="model">contact.substage</field>
            <field name="arch" type="xml">
                <form string="Contact Stage">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="contact_stage_tree_view">
            <field name="name">contact.substage.tree</field>
            <field name="model">contact.substage</field>
            <field name="arch" type="xml">
                <tree string="Contact Stage">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_contact_sub_stage" model="ir.actions.act_window">
            <field name="name">Contact Stage</field>
            <field name="res_model">contact.substage</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="ov_hr_recruitment_contact_stage" name="Contact Stage" sequence="1"
