<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <record model="ir.ui.view" id="negative_character_form_view">
            <field name="name">negative.character.form</field>
            <field name="model">negative.character</field>
            <field name="arch" type="xml">
                <form string="Negative Character">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <label for="applicant_ids"/>
                        <field name="applicant_ids"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="negative_character_tree_view">
            <field name="name">negative.character.tree</field>
            <field name="model">negative.character</field>
            <field name="arch" type="xml">
                <tree string="Negative Character">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_negative_character" model="ir.actions.act_window">
            <field name="name">Negative Character</field>
            <field name="res_model">negative.character</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

