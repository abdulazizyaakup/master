        <record model="ir.ui.view" id="edu_back_form_view">
            <field name="name">edu.back.form</field>
            <field name="model">edu.back</field>
            <field name="arch" type="xml">
                <form string="School">
                    <sheet>
                        <group>
                            <group>
                                <field name="applicant_id"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="hqa"/>
                                <field name="year"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="edu_back_tree_view">
            <field name="name">edu.back.tree</field>
            <field name="model">edu.back</field>
            <field name="arch" type="xml">
                <tree string="School">
                    <field name="applicant_id"/>
                    <field name="name"/>
                    <field name="hqa"/>
                    <field name="year"/>
                </tree>
            </field>
        </record>

        <record id="action_edu_back" model="ir.actions.act_window">
            <field name="name">School</field>
            <field name="res_model">edu.back</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

