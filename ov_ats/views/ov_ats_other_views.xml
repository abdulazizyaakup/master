        <record model="ir.ui.view" id="iv_assessment_form_view">
            <field name="name">iv.assessment.form</field>
            <field name="model">iv.assessment</field>
            <field name="arch" type="xml">
                <form string="Interview Assessment">
                    <sheet>
                        <group string="Assessment">
                            <field name="name"/>
                            <field name="applicant_id"/>
                            <field name="interviewer"/>
                        </group>
                        <group>
                            <group>
                                <field name="personal_grooming" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <p><b>7</b> - Immaculately dressed and groomed<br/><b>1</b> - Unkempt; Sloppy</p>
                            </group>
                            <group>
                                <field name="personal_expression" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <p><b>7</b> - Very self-possessed and composed<br/><b>1</b> - Nervous; Embarrassed; Compulsive manners</p>
                            </group>
                            <group>
                                <field name="confidence" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <p><b>7</b> - Very self-assured<br/><b>1</b> - Shy; Retiring</p>
                            </group>
                            <group>
                                <field name="maturity" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <p><b>7</b> - Very mature; outstanding personality<br/><b>1</b> - Immature; Unstable; Impulsive</p>
                            </group>
                            <group>
                                <field name="commitment_n_drive" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <p><b>7</b> - Dedicated to organisation and work, Willing to accept new challenges<br/><b>1</b> -  Uninterested; Listless; Lack of vigour and perserverance</p>
                            </group>
                            <group>
                                <field name="communication_skills" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <p><b>7</b> - Able to express ideas logically and holds the attention of others<br/><b>1</b> - Finds difficulty in expressing logically and clearly</p>
                            </group>
                            <group>
                                <field name="mental_alertness" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <p><b>7</b> - Quick and keen mind; Able to grasp ideas<br/><b>1</b> - Dull; Slow to grasp ideas</p>
                            </group>
                            <group>
                                <field name="knowledge_and_skills" widget="radio" options="{'horizontal': true}"/>
                            </group>
                            <group>
                                <p><b>7</b> - Very good knowledge and skills in the context of the position applied for<br/><b>1</b> - Very poor knowledge and skills in the context of the position applied for</p>
                            </group>
                        </group>
                        <group>
                            <field name="negative_char_ids"/>
                        </group>

                        <group>
                            <field name="positive_char_ids"/>
                        </group>
                        <group>
                            <group>
                                <field name="strength_identified"/>
                            </group>
                            <group>
                                <field name="possible_weaknesses"/>
                            </group>
                            <group>
                                <field name="other_comments"/>
                            </group>
                            <group>
                                <field name="preferred_site_suitable_ids" widget="many2many_checkboxes" options="{'horizontal': true}"/>
                                <!-- <field name="iv_assessment_suitable_other" attrs="{'invisible':[('iv_assessment_suitable', '!=', 'others')]}"/> -->
                            </group>
                        </group>
                        
                        <group string="Recommendation">
                        <group>
                            <field name="recommendation" widget="radio" options="{'horizontal': true}"/>
                            <field name="recommendation_remarks"/>
                        </group>
                        <group>
                            <group>
                                <field name="recruiter"/>
                            </group>
                            <group>
                                <field name="recruiter_signature" widget="signature"/>
                            </group>
                        </group>
                    </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

