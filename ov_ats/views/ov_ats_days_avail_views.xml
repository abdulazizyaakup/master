<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <record model="ir.ui.view" id="days_avail_form_view">
            <field name="name">days.avail.form</field>
            <field name="model">days.avail</field>
            <field name="arch" type="xml">
                <form string="Days Preference">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <label for="applicant_ids"/>
                        <field name="applicant_ids"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="days_avail_tree_view">
            <field name="name">days.avail.tree</field>
            <field name="model">days.avail</field>
            <field name="arch" type="xml">
                <tree string="Days Preference">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_days_avail" model="ir.actions.act_window">
            <field name="name">Days Preference</field>
            <field name="res_model">days.avail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="ov_days_avail" name="Days Preference"
            parent="hr_recruitment.menu_hr_recruitment_configuration" action="action_days_avail" groups="hr_recruitment.group_hr_recruitment_user"/>


        <record model="ir.ui.view" id="wss_campaign_form_view">
            <field name="name">wss.campaign.form</field>
            <field name="model">wss.campaign</field>
            <field name="arch" type="xml">
                <form string="Sources">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="wss_campaign_tree_view">
            <field name="name">wss.campaign.tree</field>
            <field name="model">wss.campaign</field>
            <field name="arch" type="xml">
                <tree string="Sources">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_wss_campaign" model="ir.actions.act_window">
            <field name="name">Sources</field>
            <field name="res_model">wss.campaign</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="ov_wss_campaign" name="Sources"
            parent="hr_recruitment.menu_hr_recruitment_configuration" action="action_wss_campaign" groups="hr_recruitment.group_hr_recruitment_user"/>




</odoo>