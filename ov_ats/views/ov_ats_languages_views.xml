<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <record model="ir.ui.view" id="contact_languages_form_view">
            <field name="name">language.spokenwritten.form</field>
            <field name="model">language.spokenwritten</field>
            <field name="arch" type="xml">
                <form string="Languages">
                    <sheet>
                        <group>
                            <group>
                                <field name="applicant_id"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="proficiency_spoken"/>
                                <field name="proficiency_written"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="contact_languages_tree_view">
            <field name="name">language.spokenwritten.tree</field>
            <field name="model">language.spokenwritten</field>
            <field name="arch" type="xml">
                <tree string="Languages">
                    <field name="name"/>
                    <field name="proficiency_spoken"/>
                    <field name="proficiency_written"/>
                </tree>
            </field>
        </record>

        <record id="action_contact_languages" model="ir.actions.act_window">
            <field name="name">Languages</field>
            <field name="res_model">language.spokenwritten</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

