<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <record model="ir.ui.view" id="national_service_form_view">
            <field name="name">national.service.form</field>
            <field name="model">national.service</field>
            <field name="arch" type="xml">
                <form string="National Service">
                    <sheet>
                        <group>
                            <group>
                                <field name="applicant_id"/>
                                <field name="name"/>
                                <field name="reason" attrs="{'invisible':[('name', '!=', 'nil')]}"/>
                                <field name="rank" attrs="{'invisible':[('name', '=', 'nil')]}"/>
                                <field name="pes_grading" attrs="{'invisible':[('name', '=', 'nil')]}"/>
                            </group>
                            <group>
                                <field name="enlistment_date" attrs="{'invisible':[('name', '=', 'nil')]}"/>
                                <field name="operation_ready_date" attrs="{'invisible':[('name', '=', 'nil')]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="national_service_tree_view">
            <field name="name">national.service.tree</field>
            <field name="model">national.service</field>
            <field name="arch" type="xml">
                <tree string="National Service">
                    <field name="applicant_id"/>
                    <field name="name"/>
                    <field name="reason" attrs="{'invisible':[('name', '!=', 'nil')]}"/>
                    <field name="rank" attrs="{'invisible':[('name', '=', 'nil')]}"/>
                    <field name="pes_grading" attrs="{'invisible':[('name', '=', 'nil')]}"/>
                    <field name="enlistment_date" attrs="{'invisible':[('name', '=', 'nil')]}"/>
                    <field name="operation_ready_date" attrs="{'invisible':[('name', '=', 'nil')]}"/>
                </tree>
            </field>
        </record>

        <record id="action_national_service" model="ir.actions.act_window">
            <field name="name">National Service</field>
            <field name="res_model">national.service</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="ov_national_service" name="National Service"
            parent="hr_recruitment.menu_hr_recruitment_configuration" action="action_national_service" groups="hr_recruitment.group_hr_recruitment_user"/>

</odoo>