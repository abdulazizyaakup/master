<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.activity_items">
        <div class="o_thread_date_separator o_border_dashed" data-toggle="collapse" data-target="#o_chatter_planned_activities">
            <a role="button" class="o_thread_date btn">
                <i class="fa fa-fw fa-caret-down"/>
                Planned activities
                <small class="o_chatter_planned_activities_summary ml8">
                    <span class="badge rounded-circle badge-danger"><t t-esc="nbOverdueActivities"/></span>
                    <span class="badge rounded-circle badge-warning"><t t-esc="nbTodayActivities"/></span>
                    <span class="badge rounded-circle badge-success"><t t-esc="nbPlannedActivities"/></span>
                </small>
            </a>
        </div>
        <div id="o_chatter_planned_activities" class="collapse in show">
            <t t-foreach="activities" t-as="activity">
                <div class="o_thread_message" style="margin-bottom: 10px">
                    <div class="o_thread_message_sidebar">
                        <div class="o_avatar_stack">
                            <img t-attf-src="/web/image#{activity.user_id[0] >= 0 ? ('/res.users/' + activity.user_id[0] + '/image_small') : ''}" class="o_thread_message_avatar rounded-circle mb8" t-att-title="activity.user_id[1]" t-att-alt="activity.user_id[1]"/>
                            <i t-att-class="'o_avatar_icon fa ' + activity.icon + ' bg-' + (activity.state == 'planned'? 'success' : (activity.state == 'today'? 'warning' : 'danger')) + '-full'"
                               t-att-title="activity.activity_type_id[1]"/>
                        </div>
                    </div>
                    <div class="o_thread_message_core">
                        <div class="o_mail_info text-muted">
                            <strong><span t-attf-class="o_activity_date o_activity_color_#{activity.state}"><t t-esc="activity.label_delay" /></span></strong>:
                            <strong t-if="activity.summary"> &#8220;<t t-esc="activity.summary"/>&#8221;</strong>
                            <strong t-if="!activity.summary"> <t t-esc="activity.activity_type_id[1]" /></strong>
                            <em> for </em>
                            <t t-esc="activity.user_id[1]" />
                            <a class="btn btn-link btn-info text-muted collapsed o_activity_info ml4" role="button" data-toggle="collapse" t-attf-data-target="#o_chatter_activity_info_#{activity.id}">
                                <i class="fa fa-info-circle" role="img" aria-label="Info" title="Info"></i>
                            </a>
                            <div class="o_thread_message_collapse collapse" t-attf-id="o_chatter_activity_info_#{activity.id}">
                                <dl class="dl-horizontal">
                                    <dt>Activity type</dt>
                                    <dd class="mb8">
                                        <t t-esc="activity.activity_type_id[1]"/>
                                    </dd>
                                    <dt>Created on</dt>
                                    <dd class="mb8">
                                        <t t-esc="activity.create_date.format(datetimeFormat)"/>
                                        by
                                        <img t-attf-src="/web/image#{activity.create_user_id[0] >= 0 ? ('/res.users/' + activity.create_user_id[0] + '/image_small') : ''}"
                                            height="18" width="18"
                                            class="rounded-circle mr4"
                                            t-att-title="activity.create_user_id[1]"
                                            t-att-alt="activity.create_user_id[1]"/>
                                        <b><t t-esc="activity.create_user_id[1]"/></b>
                                    </dd>
                                    <dt>Assigned to</dt>
                                    <dd class="mb8">
                                        <img t-attf-src="/web/image#{activity.user_id[0] >= 0 ? ('/res.users/' + activity.user_id[0] + '/image_small') : ''}" height="18" width="18" class="rounded-circle mr4" t-att-title="activity.user_id[1]" t-att-alt="activity.user_id[1]"/>
                                        <b><t t-esc="activity.user_id[1]"/></b>
                                        <em>, due on </em><span t-attf-class="o_activity_color_#{activity.state}"><t t-esc="activity.date_deadline.format(dateFormat)"/></span>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <t t-if="res_model != 'hr.applicant'">
                            <div t-if="activity.note" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'note'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                            <t t-raw="activity.note"/>
                        </div>
                        </t>
                        <t t-if="res_model == 'hr.applicant'">
                            <!-- Start Contact Activity-->
                            <div t-if="activity.contact_activity == 'log_an_engagement'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contact_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Contact Activity: <b>Log an Engagement</b></span><br/>
                                <span>Type of Engagement: 
                                    <t t-if="activity.type_of_engagement == 'call_attempt'">
                                        <b>Call - Attempt</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'call_follow_up'">
                                        <b>Call - Follow Up</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'call_other'">
                                        <b>Call - Other</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'call_cold'">
                                        <b>Call - Cold</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'call_offer'">
                                        <b>Call - Offer</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'call_received'">
                                        <b>Call Received</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'call_back'">
                                        <b>Call Back</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'whatsapp_cold'">
                                        <b>Whatsapp - Cold</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'whatsapp_follow_up'">
                                        <b>Whatsapp - Follow Up</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'whatsapp_other'">
                                        <b>Whatsapp - Other</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'whatsapp_offer'">
                                        <b>Whatsapp - Offer</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'whatsapp_received'">
                                        <b>Whatsapp Received</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'whatsapp_reply'">
                                        <b>Whatsapp Reply</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'sms_cold'">
                                        <b>SMS - Cold</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'sms_follow_up'">
                                        <b>SMS - Follow Up</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'sms_other'">
                                        <b>SMS - Other</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'sms_offer'">
                                        <b>SMS - Offer</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'sms_received'">
                                        <b>SMS Received</b>
                                    </t>
                                    <t t-if="activity.type_of_engagement == 'sms_reply'">
                                        <b>SMS Reply</b>
                                    </t>
                                </span><br/>
                                <span>Engagement Status:
                                    <t t-if="activity.engagement_status == 'answered'">
                                        <b>Answered</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'not_answered'">
                                        <b>Not Answered</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'no_reply'">
                                        <b>No Reply</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'not_interested'">
                                        <b>Not Interested</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'please_call_back'">
                                        <b>Please Call Back</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'kiv_nsl'">
                                        <b>Keep-In-View - No Suitable Location</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'kiv_nsp'">
                                        <b>Keep-In-View - No Suitable Positions</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'kiv_se'">
                                        <b>Keep-In-View - Salary Expectation</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'schedule_for_application'">
                                        <b>Schedule for Application</b>
                                    </t>
                                    <t t-if="activity.engagement_status == 'other'">
                                        <b>Other</b>
                                    </t>
                                </span>
                            </div>
                            <div t-if="activity.contact_activity == 'wss_reject'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contact_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Contact Activity: <b>WSS Reject</b></span><br/>
                                Reason: <b><t t-esc="activity.wss_reject_reason[1]" /></b>
                            </div>
                            <div t-if="activity.contact_activity == 'contact_reject'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contact_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Contact Activity: <b>Contact Reject</b></span><br/>
                                Reason: <b><t t-esc="activity.contact_reject_reason[1]" /></b>
                            </div>
                            <div t-if="activity.contact_activity == 'dead'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contact_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Contact Activity: <b>Dead</b></span>
                            </div>
                            <!-- End Contact Activity-->

                            <!-- Start Application Activity-->
                            <div t-if="activity.application_activity == 'wss_reject'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'application_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Application Activity: <b>WSS Reject</b></span><br/>
                                Reason: <b><t t-esc="activity.wss_reject_reason[1]" /></b>
                            </div>
                            <div t-if="activity.application_activity == 'contact_reject'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'application_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Application Activity: <b>Contact Reject</b></span><br/>
                                Reason: <b><t t-esc="activity.contact_reject_reason[1]" /></b>
                            </div>
                            <div t-if="activity.application_activity == 'kiv'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'application_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Application Activity: <b>Keep-In-View</b></span>
                            </div>
                            <div t-if="activity.application_activity == 'first_iv'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'application_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Application Activity: <b>Schedule for First Interview</b></span>
                            </div>
                            <div t-if="activity.application_activity == 'dead'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'application_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Application Activity: <b>Dead</b></span>
                            </div>
                            <!-- End Application Activity-->

                            <!-- Start Interview Activity-->
                            <div t-if="activity.interview_activity == 'wss_reject'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'interview_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Interview Activity: <b>WSS Reject</b></span><br/>
                                Reason: <b><t t-esc="activity.wss_reject_reason[1]" /></b>
                            </div>
                            <div t-if="activity.interview_activity == 'contact_reject'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'interview_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Interview Activity: <b>Contact Reject</b></span><br/>
                                Reason: <b><t t-esc="activity.contact_reject_reason[1]" /></b>
                            </div>
                            <div t-if="activity.interview_activity == 'kiv'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'interview_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Interview Activity: <b>Keep-In-View</b></span>
                            </div>
                            <div t-if="activity.interview_activity == 'second_iv'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'interview_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Interview Activity: <b>Schedule for Second Interview</b></span>
                            </div>
                            <div t-if="activity.interview_activity == 'third_iv'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'interview_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Interview Activity: <b>Schedule for Third Interview</b></span>
                            </div>
                            <div t-if="activity.interview_activity == 'dead'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'interview_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Interview Activity: <b>Dead</b></span>
                            </div>
                            <!-- End Interview Activity-->

                            <!-- Start Contract Activity-->
                            <div t-if="activity.contract_activity == 'wss_reject'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contract_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Employment Offer Activity: <b>WSS Reject</b></span><br/>
                                Reason: <b><t t-esc="activity.wss_reject_reason[1]" /></b>
                            </div>
                            <div t-if="activity.contract_activity == 'contact_reject'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contract_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Employment Offer Activity: <b>Contact Reject</b></span><br/>
                                Reason: <b><t t-esc="activity.contact_reject_reason[1]" /></b>
                            </div>
                            <div t-if="activity.contract_activity == 'kiv'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contract_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Employment Offer Activity: <b>Keep-In-View</b></span>
                            </div>
                            <div t-if="activity.contract_activity == 'convert_to_employee'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contract_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Employment Offer Activity: <b>Converted to Employee</b></span>
                            </div>
                            <div t-if="activity.contract_activity == 'dead'" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'contract_activity'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Employment Offer Activity: <b>Dead</b></span>
                            </div>
                            <!-- End Contract Activity-->

                            <div t-if="activity.note" t-attf-class="o_thread_message_#{activity.activity_decoration ? activity.activity_decoration : 'note'} #{activity.activity_decoration ? 'alert alert-' + activity.activity_decoration : ''} small">
                                <span>Note: <b><t t-raw="activity.note"/></b></span>
                            </div>
                        </t>
                        <t t-if="activity.mail_template_ids &amp;&amp; activity.mail_template_ids.length &gt; 0">
                            <div class="mt16" t-att-data-activity-id="activity.id" t-att-data-previous-activity-type-id="activity.activity_type_id[0]">
                                <t t-foreach="activity.mail_template_ids" t-as="mail_template">
                                    <div>
                                        <i class="fa fa-envelope-o" aria-label="Mail" title="Mail" role="img"></i>
                                        <span t-esc="mail_template.name"/>:
                                        <span class="o_activity_template_preview" t-att-data-template-id="mail_template.id">Preview</span>
                                        <span class="text-muted">or</span>
                                        <span class="o_activity_template_send" t-att-data-template-id="mail_template.id">Send Now</span>
                                    </div>
                                </t>
                            </div>
                        </t>
                        <div class="o_thread_message_tools btn-group">
                            <t t-if="res_model != 'hr.applicant'"><span class="o_mark_as_done" data-toggle="popover" t-att-data-activity-id="activity.id" t-att-data-force-next-activity="activity.force_next" t-att-data-previous-activity-type-id="activity.activity_type_id[0]">
                                <a role="button" href="#" class="btn btn-link btn-success text-muted o_activity_link mr8">
                                <i class="fa fa-check"/> Mark Done </a>
                            </span>
                            </t>
                            <a role="button" href="#" class="btn btn-link btn-secondary text-muted o_edit_activity o_activity_link" t-att-data-activity-id="activity.id">
                                <i class="fa fa-pencil"/> Edit
                            </a>
                            <a role="button" href="#" class="btn btn-link btn-danger text-muted o_unlink_activity o_activity_link" t-att-data-activity-id="activity.id">
                                <i class="fa fa-times"/> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
    <t t-name="mail.activity_feedback_form">
        <div>
            <textarea class="form-control" rows="3" id="activity_feedback" placeholder="Write Feedback"/>
            <div class="mt8">
                <t t-if="!force_next">
                    <button type="button" class="btn btn-sm btn-primary o_activity_popover_done_next" t-att-data-previous-activity-type-id="previous_activity_type_id">
                        Done &amp; Schedule Next</button>
                    <button type="button" class="btn btn-sm btn-primary o_activity_popover_done">
                        Done</button>
                    <button type="button" class="btn btn-sm btn-link o_activity_popover_discard">
                        Discard</button>
                </t>
                <t t-else="">
                    <button type="button" class="btn btn-sm btn-primary o_activity_popover_done_next">
                        Done &amp; Launch Next</button>
                </t>
            </div>
        </div>
    </t>
</templates>
