<?xml version="1.0" encoding="utf-8"?>
<odoo> 

        <record model="ir.ui.view" id="ov_salary_package_form_view">
            <field name="name">ov.salarypackage.form</field>
            <field name="model">ov.salarypackage</field>
            <field name="arch" type="xml">
                <form string="Salary Package">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="type_of_package"/>
                                <field name="time"/>
                            </group>
                            <group>
                                <field name="basic_salary" widget="monetary"/>
                                <field name="ot" widget="monetary"/>
                                <field name="mvc" widget="monetary"/>
                                <field name="pis" widget="monetary"/>
                                <field name="awbr" widget="monetary"/>
                                <!-- <field name="gross_salary" widget="monetary"/> -->
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="ov_salary_package_tree_view">
            <field name="name">ov.salarypackage.tree</field>
            <field name="model">ov.salarypackage</field>
            <field name="arch" type="xml">
                <tree string="Salary Package">
                    <field name="name"/>
                    <field name="type_of_package"/>
                    <field name="time"/>
                </tree>
            </field>
        </record>        

        <record id="action_ov_salarypackage" model="ir.actions.act_window">
            <field name="name">Salary Package</field>
            <field name="res_model">ov.salarypackage</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="ov_hr_salarypackage" name="Salary Package"
            parent="hr.menu_human_resources_configuration" action="action_ov_salarypackage" groups="hr.group_hr_manager"/>


</odoo>