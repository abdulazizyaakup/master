<?xml version="1.0" encoding="utf-8"?>
<odoo> 

        <record model="ir.ui.view" id="ov_races_form_view">
            <field name="name">ov.races.form</field>
            <field name="model">ov.races</field>
            <field name="arch" type="xml">
                <form string="Race">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="ov_races_tree_view">
            <field name="name">ov.races.tree</field>
            <field name="model">ov.races</field>
            <field name="arch" type="xml">
                <tree string="Races">
                    <field name="name"/>
                </tree>
            </field>
        </record>        

        <record id="action_ov_races" model="ir.actions.act_window">
            <field name="name">Races</field>
            <field name="res_model">ov.races</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="ov_hr_recruitment_races" name="Races"
            parent="hr_recruitment.menu_hr_recruitment_configuration" action="action_ov_races" groups="hr_recruitment.group_hr_recruitment_user"/>


