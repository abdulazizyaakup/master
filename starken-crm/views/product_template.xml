<odoo>
    <record id='res_partner_scrm_form' model='ir.ui.view'>
        <field name="name">product.template.scrm.product.template.form</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//group[@name='description']" position="attributes">
           		<attribute name="string">Product Description</attribute>
       		</xpath>
       		<xpath expr="//field[@name='type']" position="attributes">
           		<attribute name="invisible">1</attribute>
       		</xpath>
       		<xpath expr="//field[@name='categ_id']" position="attributes">
           		<attribute name="invisible">1</attribute>
       		</xpath>
       		<xpath expr="//field[@name='categ_id']" position="after">
           		<field name="pro_group"/>
           		<field name="pro_class"/>
           		<field name="part_number" readonly="1"/>
				<field name="max_price_alert" />
				<field name="max_price" attrs="{'invisible': [('max_price_alert', '=', False)]}" />
       		</xpath>
       		<notebook>
                <page string="Blocks">
                    <group>
                        <group name="group_measurement">
                        	<field name="pro_length" widget="integer"/>
                        	<field name="pro_height" widget="integer"/>
                        	<field name="pro_width" widget="integer"/>
                        	<field name="pro_weight"/>
                        	<field name="net_vol"/>
                        	<field name="net_vol_uom"/>
                        	<field name="net_vol_uom_desc"/>
                        </group>
                        <group name="group_others">
                        	<field name="compression_strength"/>
                        	<field name="meter_sq_pallet"/>
                        	<field name="num_pcs_pallet"/>
                        	<field name="pallets_delivery"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>