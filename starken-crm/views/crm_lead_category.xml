<odoo>
    <record id='starken_crm_lead_category_tree' model='ir.ui.view'>
        <field name="name">starken_crm.lead.category.tree</field>
        <field name="model">starken_crm.lead.category</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Project Category">
                <field name="sequence" widget="handle" invisible="1"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="category_notes"/>
            </tree>
        </field>
    </record>

    <record id="starken_crm_lead_category_form" model="ir.ui.view">
      <field name="name">starken_crm.lead.category.form</field>
      <field name="model">starken_crm.lead.category</field>
      <field name="priority" eval="1"/>
      <field name="arch" type="xml">
          <form string="Project Category">
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                          <field name="parent_id"/>
                      </group>
                      <group>
                          <field name="category_notes"/>
                      </group>
                  </group>
              </sheet>
              <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
              </div>
          </form>
      </field>
    </record>


    <record id="starken_crm_lead_category_tree_action" model="ir.actions.act_window">
        <field name="name">Project Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">starken_crm.lead.category</field>
        <field name="context">{'custom_search': False}</field>
        <field name="view_id" ref="starken_crm_lead_category_tree"/>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    <menuitem
        id="crm_lead_category_menu_item"
        parent="crm.crm_menu_config"
        action="starken_crm_lead_category_tree_action"
        groups="sales_team.group_sale_manager"/>
</odoo>