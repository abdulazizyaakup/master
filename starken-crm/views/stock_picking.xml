<odoo>
  <!-- STOCK PICKING FORM EXTENSION -->
  <record id='stock_picking_form_extend' model='ir.ui.view'>
      <field name="name">stock.picking.form.extend</field>
      <field name="model">stock.picking</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="replace">
            <field name="seq_num" attrs="{'invisible': [('seq_num','=','/')]}"/>
        </xpath>
        <xpath expr="//form/sheet/group/group[1]/div" position="replace">
        </xpath>
        <xpath expr="//field[@name='partner_id']" position="replace">
          <field name="partner_id" string="Customer"/>
        </xpath>
        <xpath expr="//field[@name='scheduled_date']" position="after">
          <field name="shipping_date" string="Shipping Date"/>
        </xpath>
        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="customer_ship_id"/>
            <field name="lorry_no"/>
        </xpath>
        <xpath expr="//field[@name='origin']" position="after">
          <field name="origin_so"/>
          <field name="origin_so_po"/>
        </xpath>
      </field>
  </record>
  <!-- STOCK PICKING TREE EXTENSION -->
  <record id='stock_picking_tree_extend' model='ir.ui.view'>
      <field name="name">stock.vpicktree.extend</field>
      <field name="model">stock.picking</field>
      <field name="type">tree</field>
      <field name="inherit_id" ref="stock.vpicktree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="replace">
            <field name="seq_num" string="Reference"/>
        </xpath>
      </field>
  </record>

</odoo>
