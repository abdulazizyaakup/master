<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="starken_group_uom_enable" model="res.config.settings">
        <field name="group_uom" eval="True"/>
    </record>
    <function model="res.config.settings" name="execute">
        <value model="res.config.settings"
               search="[('id', '=', ref('starken_group_uom_enable'))]"/>
    </function>
    <record id="res_config_settings_view_starken" model="ir.ui.view">
        <field name="name">res.config.settings.view.starken</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']" position="inside">
                <h2>Sales Order Approval</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sales_order_approval" string="Sales Order Approval"/>
                            <div class="text-muted">
                                Choose your sales order approval level
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="sales_order_approval" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="so_sales_per_limit" string="Sales Person % Limit"/>
                            <div class="text-muted">
                                Setting Sales Person Price difference limit
                            </div>
                            <div class="content-group">
                                <div class="mt8">
                                    <field name="so_sales_per_limit" class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="so_agm_per_limit" string="AGM % Limit"/>
                            <div class="text-muted">
                                Setting AGM Price difference limit
                            </div>
                            <div class="content-group">
                                <div class="mt8">
                                    <field name="so_agm_per_limit" class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="so_ceo_per_limit" string="CEO % Limit"/>
                            <div class="text-muted">
                                Setting CEO Price difference limit
                            </div>
                            <div class="content-group">
                                <div class="mt8">
                                    <field name="so_ceo_per_limit" class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
